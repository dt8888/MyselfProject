
/**index.wxss**/
.slide-image{
  width: 100%;
  height: 150px;
}
.more{
    font-size: 12px;
    line-height: 30px;
    color: red;
    padding:5px;
}
.container{
  margin-top: 0px;
  width: 100%;
  background: #f5f5f5;
  padding-bottom: 100rpx;
}
.goodslist{
    width: 100%;
    background: #fff;
    display: flex;
    flex-direction: column;
}
.goods{
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #ddd;
}
.good-img{
    padding: 10px 5px;
    width: 80px;
    height: 70px;
    margin-bottom: -5px;
}
.good-cont{
    display: flex;
    flex: 1;
    flex-direction: column;
    font-size: 14px;
}
.goods-navigator{
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: center;
}
.good-name{
    display: flex;
    flex: 1;
    flex-direction: column;
    color: #555;
    justify-content: center;
}
.good-price{
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: space-between;
    color:#e4393c;
    margin-bottom: 10px;
}
.price{
  color:black;
  text-decoration: line-through;
}
.rebatePrice{
  font-weight: 600;
  color:gray;
}
.buyButton{
  width: 100px;
  height: 40px;
  font-size: 16px;
  background-color: #39b5de;
  color: white;
  border-radius:5px;
  margin-right: 15rpx;
}
.cart-fixbar{
  border-top: 1px solid gainsboro;
  position: fixed;
  bottom: 0;
  background: white;
  height: 100rpx;
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}
.cart-fixbar .count{
  margin-left: 20rpx;
  color:  #39b5de;
  font-size: 36rpx;
}
.cart-fixbar .order{
  color:white;
  width: 30%;
  height: 100rpx;
  background: #39b5de;
  line-height: 100rpx;
  position: absolute;
  right: 20rpx;
  font-size: 32rpx;
}
.cart-fixbar .allnum{
  font-size: 24rpx;
} 